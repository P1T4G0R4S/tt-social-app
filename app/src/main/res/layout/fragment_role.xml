<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.navigationdrawer1.RoleFragment">
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_slave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_role_slave"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_role_master"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
</LinearLayout>
